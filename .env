# =============================================
# DATABASE CONFIGURATION (XAMPP LOCAL DEVELOPMENT)
# =============================================
DB_HOST=127.0.0.1
DB_PORT=3377
DB_NAME=photo_picker_db
DB_USER=root
DB_PASSWORD=

# =============================================
# RENDER DEPLOYMENT CONFIGURATION
# =============================================
# Estas variables se configuran automáticamente en Render
# RENDER=true
# CLEARDB_DATABASE_URL=mysql://usuario:password@host/nombre_db

# =============================================
# APPLICATION SETTINGS
# =============================================
# Directorio para uploads (usar /tmp/uploads en Render)
UPLOAD_DIR=uploads

# Entorno de ejecución (development/production)
ENVIRONMENT=development

# Configuración del servidor
PORT=8000
HOST=0.0.0.0

# =============================================
# OPTIONAL SETTINGS
# =============================================
# Log level (debug, info, warning, error, critical)
LOG_LEVEL=debug

# Maximum file upload size (in MB)
MAX_UPLOAD_SIZE=10

# Allowed file extensions
ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.gif,.webp